<section class="border-b border-white bg-unit-alt-tertiary text-unit-alt-primary">
  <div class="container grid grid-cols-12 gap-6 px-4 py-16 mx-auto unit-content">
    <div class="col-span-12 md--col-span-5 md--row-span-2">
      <h2 class="mt-0 font-semibold tracking-wide normal-case h1">{{ footername_option }}</h2>
      <address class="mt-2 text-sm not-italic">{% if subname_option %}{{ subname_option }}<br />{% endif %}
      {% if building_option %}{{ building_option }}<br />{% endif %}
      {% if address_option %}{{ address_option }}{% endif %} {% if postal_option %}{{ postal_option }}{% endif %}
      {% if phone_option %}<br /><a href="tel:{{ phone_option|replace({' ':'-'}) }}">{{ phone_option }}</a>{% endif %}
      {% if fax_option %}<br />{{ fax_option }}{% endif %}
      {% if email_option %}<br />E-mail <a href="mailto:{{ email_option }}" title="Email {{ unit_name }}" class="text-ubc-blue-cobalt hover--text-ubc-blue-neptune">{{ email_option }}</a> {% endif %}
      {% if website_option %}<br />Website {{ website_option }}{% endif %}
      </address>
    </div>
    <div class="col-span-12 md--text-right md--col-span-7 md--row-span-1">{{ page.unit_footer_menu }}</div>
    {% if unit_facebook_option or unit_twitter_option or unit_youtube_option or unit_linkedin_option or unit_instagram_option %}
    <nav class="col-span-12 md--col-span-7 md--row-span-1 md--text-right">
      <ul class="flex flex-wrap justify-start pl-0 my-0 list-none md--justify-end">
        {% if unit_facebook_option %}
        <li>
          <a href="{{ unit_facebook_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Facebook</span>
            <svg role="presentation" class="inline-block w-6 h-6 stroke-2 text-unit-alt-primary hover--text-black">
              <use xlink:href="#icon-facebook"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_twitter_option %}
        <li>
          <a href="{{ unit_twitter_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Twitter</span>
            <svg role="presentation" class="inline-block w-6 h-6 stroke-2 text-unit-alt-primary hover--text-black">
              <use xlink:href="#icon-twitter"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_instagram_option %}
        <li>
          <a href="{{ unit_instagram_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Instagram</span>
            <svg role="presentation" class="inline-block w-6 h-6 stroke-2 text-unit-alt-primary hover--text-black">
              <use xlink:href="#icon-instagram"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_youtube_option %}
        <li>
          <a href="{{ unit_youtube_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">YouTube</span>
            <svg role="presentation" class="inline-block w-6 h-6 stroke-2 text-unit-alt-primary hover--text-black">
              <use xlink:href="#icon-youtube"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_linkedin_option %}
        <li>
          <a href="{{ unit_linkedin_option }}" class="block text-xs no-underline">
            <span class="sr-only">LinkedIn</span>
            <svg role="presentation" class="inline-block w-6 h-6 stroke-2 text-unit-alt-primary hover--text-black">
              <use xlink:href="#icon-linkedin"></use>
            </svg>
          </a>
        </li>
        {% endif %}
      </ul>
    </nav>
    {% endif %}
  </div>
</section>