{% set section_attributes = create_attribute() %}
{% set facebook_attributes = create_attribute() %}
{% set twitter_attributes = create_attribute() %}
{% set instagram_attributes = create_attribute() %}
{% set youtube_attributes = create_attribute() %}
{% set linkedin_attributes = create_attribute() %}
{% set bluesky_attributes = create_attribute() %}

{% if footer_color == "gold" %}
  {%
    set section_classes = [
      'border-b',
      'border-white',
      'bg-unit-alt-tertiary',
      'text-unit-alt-primary',
    ]
  %}
  {%
    set social_classes = [
      'inline-block',
      'w-6',
      'h-6',
      'stroke-2',
      'text-unit-alt-primary',
      'hover--text-black',
    ]
  %}
{% endif %}
{% if footer_color == "blue" %}
  {%
    set section_classes = [
      'border-b',
      'border-white',
      'bg-unit-tertiary',
      'text-ubc-blue',
    ]
  %}
  {%
    set social_classes = [
      'inline-block',
      'w-6',
      'h-6',
      'stroke-2',
      'text-ubc-blue',
      'hover--text-black',
    ]
  %}
{% endif %}

<section{{ section_attributes.addClass(section_classes) }}>
  <div class="container grid grid-cols-12 gap-6 px-4 py-16 mx-auto unit-content">
    <div class="col-span-12 md--col-span-5 md--row-span-2">
      <h2 class="mt-0 font-semibold tracking-wide normal-case h3">{{ footername_option }}</h2>
      <address class="mt-2 text-sm not-italic">{% if subname_option %}{{ subname_option }}<br />{% endif %}
      {% if building_option %}{{ building_option }}<br />{% endif %}
      {% if address_option %}{{ address_option }}{% endif %} {% if postal_option %}{{ postal_option }}{% endif %}
      {% if phone_option %}<br /><a href="tel:{{ phone_option|replace({' ':'-'}) }}">{{ phone_option }}</a>{% endif %}
      {% if fax_option %}<br />{{ fax_option }}{% endif %}
      {% if email_option %}<br /><a href="mailto:{{ email_option }}" title="Email {{ unit_name }}" class="text-ubc-blue-cobalt hover--text-ubc-blue-neptune">{{ email_option }}</a> {% endif %}
      {% if website_option %}<br />Website {{ website_option }}{% endif %}
      </address>
    </div>
    <div class="col-span-12 md--text-right md--col-span-7 md--row-span-1">{{ page.unit_footer_menu }}</div>
    {% if unit_facebook_option or unit_twitter_option or unit_youtube_option or unit_linkedin_option or unit_instagram_option or unit_bluesky_option %}
    <nav class="col-span-12 md--col-span-7 md--row-span-1 md--text-right">
      <ul class="flex flex-wrap justify-start pl-0 my-0 list-none md--justify-end">
        {% if unit_facebook_option %}
        <li>
          <a href="{{ unit_facebook_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Facebook</span>
            <svg{{ facebook_attributes.addClass(social_classes).setAttribute('role', 'presentation') }}>
              <use xlink:href="#icon-facebook"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_twitter_option %}
        <li>
          <a href="{{ unit_twitter_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Twitter</span>
            <svg{{ twitter_attributes.addClass(social_classes).setAttribute('role', 'presentation') }}>
              <use xlink:href="#icon-twitter"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_instagram_option %}
        <li>
          <a href="{{ unit_instagram_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Instagram</span>
            <svg{{ instagram_attributes.addClass(social_classes).setAttribute('role', 'presentation') }}>
              <use xlink:href="#icon-instagram"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_bluesky_option %}
        <li>
          <a href="{{ unit_bluesky_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Bluesky</span>
            <svg{{ bluesky_attributes.addClass(social_classes).setAttribute('role', 'presentation') }}>
              <use xlink:href="#icon-bluesky"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_spotify_option %}
        <li>
          <a href="{{ unit_spotify_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">Spotify</span>
            <svg{{ twitter_attributes.addClass(social_classes).setAttribute('role', 'presentation') }}>
              <use xlink:href="#icon-spotify"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_youtube_option %}
        <li>
          <a href="{{ unit_youtube_option }}" class="block pr-3 text-xs no-underline">
            <span class="sr-only">YouTube</span>
            <svg{{ youtube_attributes.addClass(social_classes).setAttribute('role', 'presentation') }}>
              <use xlink:href="#icon-youtube"></use>
            </svg>
          </a>
        </li>
        {% endif %}
        {% if unit_linkedin_option %}
        <li>
          <a href="{{ unit_linkedin_option }}" class="block text-xs no-underline">
            <span class="sr-only">LinkedIn</span>
            <svg{{ linkedin_attributes.addClass(social_classes).setAttribute('role', 'presentation') }}>
              <use xlink:href="#icon-linkedin"></use>
            </svg>
          </a>
        </li>
        {% endif %}
      </ul>
    </nav>
    {% endif %}
  </div>
</section>