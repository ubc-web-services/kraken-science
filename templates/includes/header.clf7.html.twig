<div id="clf7__header">
  {% if clf_vue %}
  <slide-up-down :active="showSearch" :duration="125" v-cloak>
    <div class="expand" id="ubc7-global-menu">
  {% else %}
    <div class="collapse expand" id="ubc7-global-menu">
  {% endif %}
      <div id="ubc7-search" class="expand">
        <div class="clf-container">
          <div id="ubc7-search-box">
            <form class="form-search" method="get" action="https://www.ubc.ca/search/refine/" role="search">
              <label for="q" class="hidden">Search UBC</label>
              {% if searchlabel_option %}
              <input id="q" type="text" name="q" placeholder="{{ searchlabel_option }}" class="inline-block mr-2" style="width:auto;">
              {% else %}
              <input id="q" type="text" name="q" placeholder="Search this website" class="inline-block w-auto mr-2" style="width:auto;">
              {% endif %}
              <input type="hidden" name="label" value="Search" />
              {% if searchdomain_option %}
              <input type="hidden" name="site" value="{{ searchdomain_option }}" />
              {% else %}
              <input type="hidden" name="site" value="hr.ubc.ca" />
              {% endif %}
              <button type="submit" class="btn">Search</button>
            </form>
          </div>
        </div> <!-- /clf-container -->
      </div>
      <div class="clf-container">
        <div id="ubc7-global-header" class="expand">
          <div class="row-fluid">
            <div class="span8 offset2">
              <ul class="clearfix reverse">
                <li><a href="https://www.calendar.ubc.ca/">Academic Calendar</a></li>
                <li><a href="https://www.ubc.ca/landing/campusservices.html">Campus Services</a></li>
                <li><a href="https://www.ubc.ca/landing/facultiesschools.html">Faculties &amp; Schools</a></li>
                <li><a href="https://www.library.ubc.ca/">Library</a></li>
                <li><a href="https://www.ubc.ca/about/maps.html">Maps</a></li>
                <li><a href="https://www.ubc.ca/quicklinks/">Quicklinks</a></li>
                <li><a href="https://ssc.adm.ubc.ca/sscportal/">Student Service Centre</a></li>
                <li><a href="https://directory.ubc.ca/index.cfm">UBC Directory</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div> <!-- /clf-container -->
    </div>
  {% if clf_vue %}
  </slide-up-down>
  {% endif %}
  <header id="ubc7-header" class="row-fluid expand">
    <div class="clearfix clf-container">
      <div class="span1">
        <div id="ubc7-logo">
          <a href="https://www.ubc.ca">The University of British Columbia</a>
        </div>
      </div>
      <div class="span2">
        <div id="ubc7-apom">
          <a href="https://cdn.ubc.ca/clf/ref/aplaceofmind">UBC - A Place of Mind</a>
        </div>
      </div>
      <div class="span9" id="ubc7-wordmark-block">
        <div id="ubc7-wordmark">
          <a href="https://www.ubc.ca">The University of British Columbia</a>
          {% if campus_option == 'vancouver' %}
            <span class="ubc7-campus" id="ubc7-vancouver-campus">Vancouver Campus</span>
          {% endif %}
          {% if campus_option == 'okanagan' %}
            <span class="ubc7-campus" id="ubc7-okanagan-campus">Okanagan Campus</span>
          {% endif %}
        </div>
        <div id="ubc7-global-utility">
          <button type="button" data-bs-toggle="collapse" @click="toggleSearch" data-bs-target="#ubc7-global-menu"><span :class="{ opened : showSearch }">UBC Search</span></button>
          <noscript>&lt;a id="ubc7-global-utility-no-script" href="https://www.ubc.ca/"&gt;UBC
            Search&lt;/a&gt;</noscript>
        </div>
      </div>
    </div> <!-- /clf-container -->
  </header>
  <div id="ubc7-unit" class="row-fluid expand" style="">
    <div class="clf-container">
      <div class="relative span12">
        <!-- Mobile Menu Icon -->
        <div class="navbar">
          <button data-bs-toggle="collapse" data-bs-target="#ubc7-unit-navigation" @click="toggleMobileNav" class="btn btn-navbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        {% if is_front %}
        <h1 id="ubc7-unit-name" style="font-family: Arial, sans-serif" {{ faculty_option != '' ? ' class="ubc7-single-element"' }}>
          <a href="/">
            {% if faculty_option == '' %}
              <span id="ubc7-unit-faculty">{{ faculty_name }}</span>
            {% endif %}
            <span id="ubc7-unit-identifier">{{ unit_name }}</span></a>
        </h1>
        {% else %}
        <div id="ubc7-unit-name" {{ faculty_option != '' ? ' class="ubc7-single-element"' }}>
          <a href="/">
            {% if faculty_option == '' %}
            <span id="ubc7-unit-faculty">{{ faculty_name }}</span>
            {% endif %}
            <span id="ubc7-unit-identifier">{{ unit_name }}</span>
          </a>
        </div>
        {% endif %}
      </div>
    </div> <!-- /clf-container -->
  </div>
</div>
{% if clf_sticky %}
  <nav class="sticky top-0 z-50 py-0 navbar expand clf-required" v-show="showMobileNav" id="ubc7-unit-menu">
{% else %}
  <nav class="py-0 navbar expand clf-required" v-show="showMobileNav" id="ubc7-unit-menu">
{% endif %}
  <div class="navbar-inner expand">
    <div class="nav-collapse collapse" id="ubc7-unit-navigation">
      <div class="clf-container">{{ page.primary_menu }}</div>
      <div class="clf-container">{{ page.secondary_menu }}</div>
    </div>
  </div>
</nav>
{{ page.alert_region }}
